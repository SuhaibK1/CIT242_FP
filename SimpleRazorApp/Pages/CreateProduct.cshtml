@page
@model CreateProductModel

<h2>Create New Product</h2>

<form method="post">
    
    <div class="form-group">
        <label for="ProductId">Product ID</label>
        <input type="number" class="form-control" id="ProductId" asp-for="Product.ProductID" />
    </div>

    <div class="form-group">
        <label for="ProductName">Product Name</label>
        <input type="text" class="form-control" id="ProductName" asp-for="Product.ProductName" />
    </div>

    <div class="form-group">
        <label for="SupplierId">Supplier ID</label>
        <input type="number" class="form-control" id="SupplierId" asp-for="Product.SupplierID" />
    </div>

    <div class="form-group">
        <label for="CategoryId">Category ID</label>
        <input type="number" class="form-control" id="CategoryId" asp-for="Product.CategoryID" />
    </div>

    <div class="form-group">
        <label for="QuantityPerUnit">Quantity Per Unit</label>
        <input type="text" class="form-control" id="QuantityPerUnit" asp-for="Product.QuantityPerUnit" />
    </div>

    <div class="form-group">
        <label for="UnitPrice">Unit Price</label>
        <input type="number" step="0.01" class="form-control" id="UnitPrice" asp-for="Product.UnitPrice" />
    </div>

    <div class="form-group">
        <label for="UnitsInStock">Units In Stock</label>
        <input type="number" class="form-control" id="UnitsInStock" asp-for="Product.UnitsInStock" />
    </div>

    <div class="form-group">
        <label for="UnitsOnOrder">Units On Order</label>
        <input type="number" class="form-control" id="UnitsOnOrder" asp-for="Product.UnitsOnOrder" />
    </div>

    <div class="form-group">
        <label for="ReorderLevel">Reorder Level</label>
        <input type="number" class="form-control" id="ReorderLevel" asp-for="Product.ReorderLevel" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>